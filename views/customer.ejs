<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css" integrity="sha512-z3gLpd7yknf1YoNbCzqRKc4qyor8gaKU1qmn+CShxbuBusANI9QpRohGBreCFkKxLhei6S9CQXFEbbKuqLg0DA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
    <div class="container">
        <form action="/<%= shop %>/list" class="mt-3" method="post" id="myForm">
            <div class="mb-3">
                <input type="text" class="form-control" placeholder="name" name="customer">
            </div>
            <div class="mb-3">
                <input type="tel"  class="form-control" placeholder="number" name="customerno">
            </div>
            <hr>
            <h1>List</h1>
            <div class="items p-1 bg-light " id="itemContainer">
                <!-- Items will be dynamically added here -->
            </div>
            <div class="mb-3 ">
                <button type="button" class="btn btn-success" onclick="addItem()">Add Item</button>
            </div>
            <button type="submit" class="btn btn-primary" >SEND LIST</button>
        </form>
    </div>
    
    <script>
        function addItem() {
            const itemDiv = document.createElement('div');
            itemDiv.className = 'item';
            itemDiv.innerHTML = `
                <div class="d-flex" style="align-items: center;">
                    <input type="text" class="form-control" placeholder="item name" name="itemname">

                    <button class="btn btn-danger btn-sm m-1"  type="button"  onclick="decreaseQuantity(this)">
                        <i class="fa-solid fa-minus"></i>
                    </button>
                    <input class="form-control form-control-sm quantity" type="number"  value="1" name="itemcount" id="" style="max-width: 5rem;">
                    <button class="btn btn-primary btn-sm m-1" type="button" onclick="increaseQuantity(this)">
                        <i class="fa-solid fa-plus"></i>
                    </button>

                    <button class="btn btn-dark btn-sm m-1" onclick="removeItem(this)">
                        <i class="fa-solid fa-trash-can"></i>
                    </button>
                </div>
                <div class="d-flex" style="align-items: center;">
                   
                </div>
            `;
            document.getElementById('itemContainer').appendChild(itemDiv);
        }
    
        function removeItem(button) {
            const itemDiv = button.closest('.item');
            if (itemDiv) {
                itemDiv.remove();
            }
        }
    
        function increaseQuantity(button) {
            const inputElement = button.previousElementSibling;
            if (inputElement && inputElement.classList.contains('quantity')) {
                inputElement.value = parseInt(inputElement.value) + 1;
            }
        }
        
        function decreaseQuantity(button) {
            const inputElement = button.nextElementSibling;
            if (inputElement && inputElement.classList.contains('quantity') && parseInt(inputElement.value) > 1) {
                inputElement.value = parseInt(inputElement.value) - 1;
            }
        }
    </script>
    
    <script>
        
    </script>
</body>
</html>
